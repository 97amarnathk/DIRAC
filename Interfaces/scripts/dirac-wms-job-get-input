__RCSID__   = "$Id: dirac-wms-job-get-input,v 1.2 2008/04/17 08:27:17 rgracian Exp $"
__VERSION__ = "$Revision: 1.2 $"
from DIRACEnvironment import DIRAC
from DIRAC.Core.Base import Script
from DIRAC.Interfaces.API.Dirac                              import Dirac
import os

Script.parseCommandLine( ignoreErrors = True )
args = Script.getPositionalArgs()

def usage():
  print 'Usage: %s <JobID> |[<JobID>]' %(Script.scriptName)
  DIRAC.exit(2)

if len(args) < 1:
  usage()
  
dirac=Dirac()
exitCode = 0

for job in args:
  try:
    job = int(job)
  except Exception,x:
    print 'Expected integer for jobID', job
    exitCode = 2
    continue

  result = dirac.getInputSandbox(job)

  if result['OK']:
    if os.path.exists('InputSandbox%s' %job):
      print 'Job input sandbox retrieved in InputSandbox%s/' %(job)
  else:
    print result['Message']
    exitCode = 2

DIRAC.exit(exitCode)
